---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en" class="h-full">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="h-full bg-gray-50 dark:bg-stone-950 flex flex-col">
        <Header />
        <main class="max-w-[960px] mx-auto px-4 py-12">
            <section>
                <ul class="flex flex-wrap gap-8 list-none p-0">
                    {
                        posts.map((post, index) => (
                            <li
                                class={`${
                                    index === 0
                                        ? "w-full text-center"
                                        : "w-[calc(50%-1rem)]"
                                }`}
                            >
                                <a
                                    href={`/blog/${post.id}/`}
                                    class="block hover:text-accent"
                                >
                                    <img
                                        class="w-full mb-2 rounded-lg shadow-sm hover:shadow-md"
                                        width={720}
                                        height={360}
                                        src={post.data.heroImage}
                                        alt=""
                                    />
                                    <h4 class="text-gray-900 dark:text-gray-300 text-xl font-bold">
                                        {post.data.title}
                                    </h4>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">
                                        <FormattedDate
                                            date={post.data.pubDate}
                                        />
                                    </p>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </main>
        <Footer />
    </body>
</html>
