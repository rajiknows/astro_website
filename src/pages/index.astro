---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en" class="h-full">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="h-full bg-gray-50 dark:bg-stone-950 flex flex-col">
        <Header />

        <main class="max-w-[700px] mx-auto px-4 py-12">
            <h1
                class="text-4xl font-bold text-gray-700 dark:text-gray-300 mb-6"
            >
                Rajesh Jha
            </h1>
            <h2 class="text-xl text-gray-700 dark:text-gray-300">
                Indie developer | Building low-level systems & tools
            </h2>
            <div class="prose dark:prose-invert">
                <p class="text-gray-700 dark:text-gray-300">
                    I specialize in low-level programming, distributed systems,
                    and creating efficient tools that scale. Passionate about
                    building high-performance software and exploring new tech.
                </p>
                <p class="text-gray-700 dark:text-gray-300">
                    Currently working on projects that involve Rust, Zig, and
                    distributed computing. Open to collaborations and
                    open-source contributions.
                </p>
            </div>

            <h1
                class="text-3xl font-medium text-gray-700 dark:text-gray-300 mb-6"
            >
                Portfolio
            </h1>

            <div class="grid grid-cols-2 gap-3">
                <a href="/websites">
                    <div
                        class="border dark:border-stone-800 rounded-md px-3 bg-stone-100 dark:bg-stone-900 py-2 text-center text-gray-700 dark:text-gray-300 flex justify-between"
                    >
                        <div>Website</div>
                        <folder class="text-2xl">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-folder"
                                ><path
                                    d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"
                                ></path></svg
                            >
                        </folder>
                    </div>
                </a>
                <a href="/softwares">
                    <div
                        class="border dark:border-stone-800 rounded-md px-3 bg-stone-100 dark:bg-stone-900 py-2 text-center text-gray-700 dark:text-gray-300 flex justify-between"
                    >
                        <div>Software</div>
                        <folder class="text-2xl">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-folder"
                                ><path
                                    d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"
                                ></path></svg
                            >
                        </folder>
                    </div>
                </a>
                <a href="/posts">
                    <div
                        class="border dark:border-stone-800 rounded-md px-3 bg-stone-100 dark:bg-stone-900 py-2 text-center text-gray-700 dark:text-gray-300 flex justify-between"
                    >
                        <div>Posts</div>
                        <folder class="text-2xl">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-folder"
                                ><path
                                    d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"
                                ></path></svg
                            >
                        </folder>
                    </div>
                </a>
                <a href="/work">
                    <div
                        class="border dark:border-stone-800 rounded-md px-3 bg-stone-100 dark:bg-stone-900 py-2 text-center text-gray-700 dark:text-gray-300 flex justify-between"
                    >
                        <div>Work</div>
                        <folder class="text-2xl">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-folder"
                                ><path
                                    d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"
                                ></path></svg
                            >
                        </folder>
                    </div>
                </a>
            </div>
        </main>

        <Footer />
    </body>
</html>
